# Database connection
MONGODB_URI=mongodb://localhost:27017/enginedge-main-node

# Application settings
PORT=3000
NODE_ENV=development

# Messaging (Kafka)
# Enable Kafka integration
KAFKA_ENABLED=true
# Default brokers
# - For local single-broker (non-Compose), a common default is localhost:9092
# - For Hybrid Dev (Docker Compose provided in this repo), use localhost:9094 (PLAINTEXT EXTERNAL listener)
KAFKA_BROKERS=localhost:9094
# Optional security (disable for Hybrid Dev):
# KAFKA_SSL_ENABLED=false
# KAFKA_SASL_MECHANISM=
# KAFKA_SASL_USERNAME=
# KAFKA_SASL_PASSWORD=

# Kubernetes settings
KUBERNETES_NAMESPACE=default
WORKER_NODE_PREFIX=enginedge-worker
WORKER_BASE_IMAGE=enginedge-worker:latest
COMMANDER_NODE_URL=http://enginedge-main:3000 

# Google Calendar API
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/google-calendar/auth/callback
# Optional: Path to credentials.json if using service account approach
# GOOGLE_CREDENTIALS_PATH=path/to/credentials.json 

# Wolfram Alpha API
WOLFRAM_API_KEY=your_wolfram_alpha_api_key
# Optional: Default format for Wolfram results (plaintext, html, image)
WOLFRAM_DEFAULT_FORMAT=plaintext
# Optional: Request timeout in milliseconds
WOLFRAM_TIMEOUT=10000

# LLM Configuration
# Default provider to use if not specified in requests
LLM_DEFAULT_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_DEFAULT_MODEL=gpt-4o
# Optional: Custom API base URL for OpenAI-compatible APIs
# OPENAI_API_BASE=https://api.openai.com/v1
# Optional: Organization ID for OpenAI enterprise customers
# OPENAI_ORGANIZATION=your_organization_id

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229
# Optional: Custom API base URL
# ANTHROPIC_API_BASE=https://api.anthropic.com

# Groq Configuration
GROQ_API_KEY=your_groq_api_key
GROQ_DEFAULT_MODEL=llama-3-70b-8192
# Optional: Custom API base URL
# GROQ_API_BASE=https://api.groq.com

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_DEFAULT_MODEL=gemini-1.5-flash
# Optional: Custom API base URL
# GEMINI_API_BASE=https://generativelanguage.googleapis.com

# Deepseek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_DEFAULT_MODEL=deepseek-coder
# Optional: Custom API base URL
# DEEPSEEK_API_BASE=https://api.deepseek.com

# NVIDIA Configuration
NVIDIA_API_KEY=your_nvidia_api_key
NVIDIA_DEFAULT_MODEL=mixtral-8x7b-instruct
# Required for NVIDIA AI Foundation Models
NVIDIA_API_BASE=https://api.nvidia.com/v1

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# HuggingFace Configuration (for embeddings)
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Local Embedding Configuration (when EMBEDDING_PROVIDER=local)
LOCAL_EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
LOCAL_EMBEDDING_MAX_SEQ_LENGTH=512

# Vector Store Configuration
VECTOR_STORE_PROVIDER=mongodb
VECTOR_STORE_CONNECTION_STRING=mongodb://localhost:27017/enginedge-main-node
VECTOR_STORE_DATABASE_NAME=enginedge
VECTOR_STORE_COLLECTION_NAME=vectorstore

# Memory Configuration
MEMORY_PROVIDER=mongodb
MEMORY_CONNECTION_STRING=mongodb://localhost:27017/enginedge-main-node
MEMORY_DATABASE_NAME=enginedge
MEMORY_COLLECTION_NAME=memory 

# TO ORGANIZE
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
GOOGLE_REDIRECT_URI=
VIRUSTOTAL_API_KEY=
TODOIST_TOKEN=
NOTION_TOKEN=
KROKI_URL=
WOLFRAM_ALPHA_API_KEY=
TAVILY_API_KEY=