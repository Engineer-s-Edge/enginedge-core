## Example: Kafka TLS Secret
# DO NOT COMMIT real secrets. Copy this file to kafka-tls-secret.yaml and fill in base64 values.
# How to use:
# 1) Generate certificates: ./scripts/generate-kafka-tls-certs.sh
# 2) Base64 encode the certificates:
#    cat secrets/kafka-tls-certs/kafka-0-keystore.p12 | base64 -w 0
#    cat secrets/kafka-tls-certs/kafka-0-truststore.jks | base64 -w 0
#    cat secrets/kafka-tls-certs/kafka-1-keystore.p12 | base64 -w 0
#    cat secrets/kafka-tls-certs/kafka-1-truststore.jks | base64 -w 0
#    cat secrets/kafka-tls-certs/ca-cert | base64 -w 0
# 3) Replace the placeholders below with the base64 encoded values
# 4) Apply: kubectl apply -f k8s/secrets/kafka-tls-secret.yaml

apiVersion: v1
kind: Secret
metadata:
  name: kafka-tls-secret
  namespace: default
type: Opaque
data:
  # base64(kafka-0-keystore.p12)
  kafka-0-keystore.p12: <base64-kafka-0-keystore>
  # base64(kafka-0-truststore.jks)
  kafka-0-truststore.jks: <base64-kafka-0-truststore>
  # base64(kafka-1-keystore.p12)
  kafka-1-keystore.p12: <base64-kafka-1-keystore>
  # base64(kafka-1-truststore.jks)
  kafka-1-truststore.jks: <base64-kafka-1-truststore>
  # base64(ca-cert)
  ca-cert: <base64-ca-cert>
  # Keystore password (base64 encoded)
  keystore-password: Y2hhbmdlaXQ=  # base64("changeit")
  # Truststore password (base64 encoded)
  truststore-password: Y2hhbmdlaXQ=  # base64("changeit")

